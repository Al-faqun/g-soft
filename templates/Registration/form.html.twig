<form action="/registration.php" method="post">
	<div class="form-group">
		<label for="username" title="До двадцати цифр">Логин:</label>
		<input type="text" class="form-control" name="username" id="username"
		       title="От четырех до ста букв, цифр или _"
		       value="{{ databack['username'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="company_name" title="Буквы, цифры или _">Имя компании:</label>
		<input type="text" class="form-control" name="company_name" id="company_name"
		       title="Буквы, цифры или _"
		       value="{{ databack['company_name'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="inn" title="До двадцати цифр">ИНН:</label>
		<input type="number" class="form-control" name="inn" id="inn"
		       title="До двадцати букв или цифр"
		       value="{{ databack['inn'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="address" title="До 2000 знаков">Адрес компании:</label>
		<input type="text" class="form-control" name="address" id="address"
		       title="До 2000 знаков"
		       value="{{ databack['address'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="email" title="Электронная почта">Электронная почта:</label>
		<input type="email" class="form-control" name="email" id="email"
		       title="Электронная почта"
		       value="{{ databack['email'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="tel" title="До двадцати символов">Телефон:</label>
		<input type="text" class="form-control" name="tel" id="tel"
		       title="До двадцати символов"
		       value="{{ databack['tel'] ?? '' }}"
		>
	</div>
	<div class="form-group">
		<label for="password" title="Минимум шесть знаков">Пароль:</label>
		<input type="password" class="form-control" name="password" id="password" title="Минимум шесть знаков">
	</div>
	<input type="hidden" name="reg_form_sent" value="1">
	<button type="submit" class="btn btn-default">Зарегистрироваться</button>
</form>
